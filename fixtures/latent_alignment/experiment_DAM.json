{
  "dataset_reader": {
    "type": "latent_alignment",
    "max_logical_forms": 20
  },
  "validation_dataset_reader": {
    "type": "latent_alignment",
    "max_logical_forms": 200
  },
  "train_data_path": "fixtures/data/wikitables/alignment_preprocessed.json",
  "validation_data_path": "fixtures/data/wikitables/alignment_preprocessed.json",
  "model": {
    "type": "latent_alignment_dam",
    "normalize_by_len" : true,
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 100,
        "trainable": true
      }
    },
    "utterance_encoder": {
      "type": "pass_through",
      "input_dim": 100
    },

    "logical_form_embedder": {
      "lf_tokens": {
        "type": "embedding",
        "vocab_namespace": "lf_tokens",
        "embedding_dim": 100,
        "trainable": true
      }
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["logical_forms", "num_fields"], ["logical_forms", "list_num_tokens"]],
    "padding_noise": 0.0,
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 10,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.01
    }
  }
}
